<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Sign Up</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :class => "input-block-level", :placeholder => "Email Address" %>

  <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>

  <%= f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "Password" %>

  <%= f.submit "Sign Up", :class => 'btn btn-primary btn-large' %>

  <p><%= render "devise/shared/links" %></p>
<% end %>


